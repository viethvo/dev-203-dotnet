@model IEnumerable<SecurityCoding.Models.Customer>

@{
    ViewBag.Title = "All customers";
}

<h2>All customers</h2>
<br />

<h3>Please enter the exact customer name. You can only see the customer info that you know.</h3>

<table border="1" style="border:solid; border-width:thin">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw(item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div style="padding-top:20px">
    @Html.ActionLink("Create Customer", "Create")
</div>